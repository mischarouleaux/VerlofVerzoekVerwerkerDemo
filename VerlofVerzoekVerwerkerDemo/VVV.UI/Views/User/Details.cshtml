                            <h4><strong>Manager informatie</strong></h4>
                            <div class="col-md-12">
                                <hr />
                                <h4>Gebruikersnaam</h4>
                                <p>@Model.ManagerUserName</p>
                            </div>
                            <div class="col-md-12">
                                <hr />
                                <h4>Naam</h4>
                                <p>@Model.ManagerFirstName @Model.ManagerLastName</p>
                            </div>

                            <div class="col-md-12">
                                <hr />
                                <h4>E-mailadres</h4>
                                <p>@Model.ManagerEmail</p>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="col-md-12" style="background-color:white; border: 1px solid #e6e6e6; text-align:center;  margin-bottom:20px;">
                            <h4><strong>2e Manager informatie</strong></h4>
                            <div class="col-md-12">
                                <hr />
                                <h4>Gebruikersnaam</h4>
                                <p>@Model.SecondManagerUserName</p>
                            </div>
                            <div class="col-md-12">
                                <hr />
                                <h4>Naam</h4>
                                <p>@Model.SecondManagerFirstName @Model.SecondManagerLastName</p>
                            </div>

                            <div class="col-md-12">
                                <hr />
                                <h4>E-mailadres</h4>
                                <p>@Model.SecondManagerEmail</p>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="col-md-12" style="background-color:white; border: 1px solid #e6e6e6; text-align:center;  margin-bottom:20px;">
                            <h4><strong>Gebruikersrollen</strong></h4>
                            <div class="col-md-12">
                                <hr />
                                @if (Model.IsMedewerker == true)
                                {
